<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Prayerify.Pages.AnsweredPrayersPage"
			 Title="Answered">
	<CollectionView ItemsSource="{Binding Prayers}" EmptyView="No answered prayers yet." Margin="16">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Frame Padding="12" Margin="0,8" CornerRadius="12" HasShadow="False">
						<VerticalStackLayout Spacing="8">
							<Label Text="{Binding Subject}" FontAttributes="Bold" FontSize="20"/>
							<Label Text="{Binding Body}" Opacity="0.8"/>
						</VerticalStackLayout>
					</Frame>
				</DataTemplate>
			</CollectionView.ItemTemplate>
	</CollectionView>
</ContentPage>


