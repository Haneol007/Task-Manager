<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Prayerify.Pages.EditPrayerPage"
			 Title="Edit Prayer">
	<ScrollView>
		<VerticalStackLayout Padding="16" Spacing="16">
			<Frame Padding="12" CornerRadius="12" HasShadow="False">
				<VerticalStackLayout Spacing="12">
					<Entry Placeholder="Subject" Text="{Binding Subject}" MaxLength="30"/>
					<Editor Placeholder="Body" AutoSize="TextChanges" Text="{Binding Body}" MaxLength="500"/>
					<Picker Title="Category" ItemsSource="{Binding Categories}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedCategory}"/>
				</VerticalStackLayout>
			</Frame>
			<Button Text="Save" Command="{Binding SaveCommand}" />
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>


