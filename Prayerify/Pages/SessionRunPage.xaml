<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Prayerify.Pages.SessionRunPage"
			 Title="Session">
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto" Padding="16" RowSpacing="16">
            <Frame Padding="16" CornerRadius="16" HasShadow="False" Grid.Row="0">
                <Grid RowSpacing="12" RowDefinitions="Auto,Auto,Auto">
                    <Label Text="{Binding CurrentPrayer.PrayerTitle}" FontAttributes="Bold" FontSize="22" Grid.Row="0"/>
                    <Label Text="{Binding CurrentPrayer.PrayerDescription}" Grid.Row="1"/>
                    <Label Text="{Binding CurrentCategory.Name}" Grid.Row="2" VerticalOptions="End" TextColor="{StaticResource Gray500}"/>
                </Grid>
            </Frame>
            <HorizontalStackLayout Spacing="12" Grid.Row="1" HorizontalOptions="End">
                <Button Text="Done" Command="{Binding MarkDoneCommand}" />
                <Button Text="Answered" Command="{Binding MarkAnsweredCommand}" />
            </HorizontalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>


